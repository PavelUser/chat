<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss}{Minks/Europe}   %-5p [%t] %c: %m%n"/>
        </layout>
        <!--
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m"/>
        </layout>
        -->
    </appender>

    <appender name="FileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="Info.log"/>
        <param name="append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
                <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t]%c: %m"/>
        </layout>
    </appender>

    <appender name="ServerFileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="server.log"/>
        <param name="append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t]%c: %m"/>
        </layout>
    </appender>

    <appender name="ClientFileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="server.log"/>
        <param name="append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t]%c: %m"/>
        </layout>
    </appender>

    <logger name="com.company.server" additivity="true">
        <level value="info"/>
        <appender-ref ref="ServerFileAppender"/>
    </logger>

    <logger name="com.company.client" additivity="true">
        <level value="info"/>
        <appender-ref ref="ClientFileAppender"/>
    </logger>

    <root>
        <priority value="INFO"/>
        <appender-ref ref="console" />
        <appender-ref ref="FileAppender"/>
    </root>

</log4j:configuration>